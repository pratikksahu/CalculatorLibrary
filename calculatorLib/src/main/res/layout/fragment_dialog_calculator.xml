<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5sp"
    tools:context=".DialogCalculator">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/infixTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="5sp"
            android:gravity="end"
            android:text="0" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/currTV"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:gravity="center|right"
                android:text="0"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/column_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_ac"
                    style="@style/Number"
                    android:text="AC" />

                <Button
                    android:id="@+id/button_7"
                    style="@style/Number"
                    android:text="7" />

                <Button
                    android:id="@+id/button_4"
                    style="@style/Number"
                    android:text="4" />

                <Button
                    android:id="@+id/button_1"
                    style="@style/Number"
                    android:text="1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/column_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_exponent"
                    style="@style/Number"
                    android:text="^" />

                <Button
                    android:id="@+id/button_8"
                    style="@style/Number"
                    android:text="8" />

                <Button
                    android:id="@+id/button_5"
                    style="@style/Number"
                    android:text="5" />

                <Button
                    android:id="@+id/button_2"
                    style="@style/Number"
                    android:text="2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/column_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_percentage"
                    style="@style/Operator"
                    android:text="%" />

                <Button
                    android:id="@+id/button_9"
                    style="@style/Number"
                    android:text="9" />

                <Button
                    android:id="@+id/button_6"
                    style="@style/Number"
                    android:text="6" />

                <Button
                    android:id="@+id/button_3"
                    style="@style/Number"
                    android:text="3" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutOperators"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_add"
                    style="@style/Operator"
                    android:text="+" />

                <Button
                    android:id="@+id/button_subtract"
                    style="@style/Operator"
                    android:text="-" />

                <Button
                    android:id="@+id/button_multiply"
                    style="@style/Operator"
                    android:text="*" />

                <Button
                    android:id="@+id/button_divide"
                    style="@style/Operator"
                    android:text="/" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_0"
                    style="@style/Number"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_equal"
                    style="@style/Operator"
                    android:text="=" />

                <Button
                    android:id="@+id/button_dot"
                    style="@style/Operator"
                    android:text="." />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_cancel"
                style="@style/function"
                android:text="CANCEL" />

            <Button
                android:id="@+id/button_ok"
                style="@style/function"
                android:text="OK" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
